
@{
    ViewBag.Title = "Location";
}


<h1>My First Google Map</h1>
<input id="latitude" value="" style="visibility:hidden">
<input id="longitude" value="" style="visibility:hidden">

<div id="map" style="width:100%;height:400px;"></div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">       
    window.onload = function ()
    {       
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                var latitude = position.coords.latitude;
                var longitude = position.coords.longitude;
                var uluru = { lat: latitude, lng: longitude };
                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 4,
                    center: uluru
                });
                var marker = new google.maps.Marker({
                    position: uluru,
                    map: map
                });
            });
        } else { alert("Geolocation API не поддерживается в вашем браузере") }
    }                  
</script>
<script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyDJxZfKWeRpWaoj5jEzsesCCuO_k8AQcaM"></script>